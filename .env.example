# Clubland Environment Configuration Template
# Copy this file to .env.development, .env.staging, .env.production

# Environment
ENVIRONMENT=development

# API Configuration
API_BASE_URL=http://localhost:8080
GRAPHQL_ENDPOINT=http://localhost:8080/graphql

# Authentication
HANKO_BASE_URL=http://localhost:8000
HANKO_API_KEY=your_hanko_api_key_here

# Security (REQUIRED in production)
ENCRYPTION_KEY=your_32_character_encryption_key_here
JWT_SECRET=your_jwt_secret_key_here

# Database (for backend services)
DATABASE_URL=postgresql://localhost:5432/clubland_dev
REDIS_URL=redis://localhost:6379

# Blockchain Configuration
FABRIC_CA_URL=http://localhost:7054
FABRIC_PEER_URL=grpc://localhost:7051
FABRIC_ORDERER_URL=grpc://localhost:7050

# Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn_here
AMPLITUDE_API_KEY=your_amplitude_key_here

# Feature Flags
ENABLE_LOGGING=true
ENABLE_ANALYTICS=false
ENABLE_CRASH_REPORTING=false

# API Timeouts (milliseconds)
CONNECT_TIMEOUT=10000
RECEIVE_TIMEOUT=30000
SEND_TIMEOUT=30000